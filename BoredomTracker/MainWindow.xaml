<Window x:Class="BoredomTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoredomTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="70" Width="100" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" SizeToContent="Manual" Topmost="True">
    <Grid>
        <StackPanel Height="50" VerticalAlignment="Center" Margin="0,20,0,0" HorizontalAlignment="Stretch">
            <Button Content="Start" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,0,0" Height="20"/>
            <Button Content="Stop" Height="20" Margin="0,10,0,0" />
        </StackPanel>
        <Button Content="X" HorizontalAlignment="Center" VerticalAlignment="Top" Width="18" Height="18" FontSize="9" Background="{x:Null}" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
